# set the log facility.  "LOG_USER" and "user" are equivalent.
logfacility = LOG_USER 

# Explicitly allow via (allowscp,allowsftp,allowcvs,allowrdist,allowrsync)
<% if allow and allow.kind_of?(Array) and ! allow.empty? -%>
<% allow.each do |ale| -%>
<%= ale %>
<% end -%>
<% end -%>

# Set the default umask
<% if umask and ! umask.empty? -%>
umask = <%= umask %>
<% else -%>
umask = 022
<% end -%>

# Set chrootpath for all users must be specified again for users
<% if chrootpath and ! chrootpath.empty? -%>
chrootpath = "<%= chrootpath %>"
<% else -%>
# chrootpath = /usr/local/chroot
<% end -%>

# Users, the pattern is username:umask:allow(as a bitmask):chrootpath
<% if users and users.kind_of?(Array) and ! users.empty? -%>
<% users.each do |usr| -%>
user = "<%= usr %>"
<% end -%>
<% end -%>
